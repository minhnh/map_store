<launch>
  <arg name="map_resolution" />
  <arg name="map_config_file" default="$(find mcr_default_env_config)/brsu-c025/map.yaml" />
  <arg name="map_name" />

  <!-- node name="mongo" type="mongo_wrapper_ros.py" pkg="warehouse_ros" output="screen">
    <param name="database_path" value="warehouse_data"/>
    <param name="overwrite" value="false"/>
  </node -->

  <node name="mongo" type="mongo_wrapper_ros.py" pkg="warehouse_ros">
    <param name="overwrite" value="true"/>
    <param name="database_location" value="/home/minh/workspace/mongodb/data/$(arg map_name)"/>
  </node>

  <param name="warehouse_port" value="27019"/>

  <node pkg="map_store" type="map_saver" name="save_map" output="screen"  />

  <node pkg="map_store" type="map_manager" name="map_manager" output="screen">
     <!-- unused topics -->
     <remap from="dynamic_map" to="map_store_dynamic_map"/>
     <remap from="map" to="map_store_map"/>
  </node> 

  <node name="map_server" pkg="map_server" type="map_server" args="'$(arg map_config_file)'" output="screen" > <!-- '$(arg map_resolution)'" -->
     <!-- Remaps to load the map file -->
     <remap from="/static_map" to="/dynamic_map" />
     <remap from="/map" to="/map_unused" />
  </node>

  <node pkg="map_store" type="add_map.py" name="add_map" args="'$(arg map_name)'" required="true" output="screen" />
</launch>

